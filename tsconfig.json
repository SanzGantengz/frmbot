{
	"compilerOptions": {
	  "target": "es3",                       
	  "module": "commonjs",                          
	  "esModuleInterop": true,                  
	  "experimentalDecorators": true,                
	  "strict": true,                                              
	  "allowJs": false,
	  "checkJs": false,
	  "outDir": "./library/dist",
	  "noImplicitThis": true,
	  "resolveJsonModule": true,
	  "declaration": true,
	  "moduleResolution": "node",
	  "sourceMap": true,
	  "skipLibCheck": false,            
	  "forceConsistentCasingInFileNames": false    
	}
  }